<Window
    x:Class="F1_widgets.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="F1 Widget"
    Width="340"
    Height="520"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Loaded="Window_Loaded"
    >
    


    <Grid Margin="8">
        <!-- 带阴影+圆角的主卡片 -->
        <Border Background="#CC202020"
                CornerRadius="18"
                Padding="15"
                MouseLeftButtonDown="WindowDrag">
            <Border.Effect>
                <DropShadowEffect BlurRadius="18"
                                  ShadowDepth="0"
                                  Opacity="0.6" />
            </Border.Effect>

            <!-- 右键菜单 -->
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="{DynamicResource RefreshNow}"
                              Click="RefreshNow_Click"/>
                    <Separator/>
                    <MenuItem Header="{DynamicResource Language}">
                        <MenuItem Header="English"
                                  Click="LanguageEnglish_Click"/>
                        <MenuItem Header="中文"
                                  Click="LanguageChinese_Click"/>
                    </MenuItem>
                    <MenuItem Header="{DynamicResource EnableAutostart}"
                              Click="EnableAutostart_Click"/>
                    <Separator/>
                    <MenuItem Header="{DynamicResource Exit}"
                              Click="Exit_Click"/>
                </ContextMenu>
            </Border.ContextMenu>

            <StackPanel>

                <!-- 下一场大奖赛 标题 -->
                <TextBlock Text="{DynamicResource NextRace}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,2"/>
                <TextBlock x:Name="CountdownText"
                           FontSize="10"
                           Margin="0 0 0 0"
                           Foreground="White"/>


                <!-- Grand Prix 名称 -->
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="{DynamicResource GrandPrixName}"
                               Foreground="#FFEEEEEE"
                               Width="120"/>
                    <TextBlock x:Name="GrandPrixNameText"
                               Foreground="White"
                               Text="—"/>
                </StackPanel>

                <!-- 地点 -->
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="{DynamicResource Location}"
                               Foreground="#FFEEEEEE"
                               Width="120"/>
                    <TextBlock x:Name="LocationText"
                               Foreground="White"
                               Text="—"/>
                </StackPanel>

                <!-- 正赛时间（本地） -->
                <StackPanel Orientation="Horizontal" Margin="0,1">
                    <TextBlock Text="{DynamicResource RaceTime}"
                               Foreground="#FFEEEEEE"
                               Width="120"/>
                    <TextBlock x:Name="RaceTimeText"
                               Foreground="White"
                               Text="—"/>
                </StackPanel>

                <!-- 赛道图区域 -->
                <Border BorderBrush="#44FFFFFF"
                        BorderThickness="1"
                        CornerRadius="10"
                        Margin="0,8,0,6"
                        Height="130"
                        Background="#22000000">
                    <Grid>
                        <Image x:Name="TrackImage"
                               Stretch="Uniform"
                               Margin="4"
                               Visibility="Collapsed"/>
                        <TextBlock x:Name="TrackPlaceholderText"
                                   Text="{DynamicResource TrackMap}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="#88FFFFFF"/>
                    </Grid>
                </Border>

                <!-- Weekend Schedule -->
                <TextBlock Text="{DynamicResource WeekendSchedule}" 
           Foreground="White" FontWeight="Bold" FontSize="16" Margin="0 1 0 1"/>

                <!-- Practice 1 -->
                <Grid x:Name="RowFP1" Margin="0,3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{DynamicResource Practice1}" Foreground="White" />
                    <TextBlock x:Name="FP1Text" Grid.Column="1" Foreground="White"/>
                </Grid>

                <!-- Practice 2 -->
                <Grid x:Name="RowFP2" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{DynamicResource Practice2}" Foreground="White" />
                    <TextBlock x:Name="FP2Text" Grid.Column="1" Foreground="White"/>
                </Grid>

                <!-- Practice 3 -->
                <Grid x:Name="RowFP3" Margin="0,3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{DynamicResource Practice3}" Foreground="White" />
                    <TextBlock x:Name="FP3Text" Grid.Column="1" Foreground="White"/>
                </Grid>

                <!-- Qualifying -->
                <Grid x:Name="RowQualy" Margin="0,3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{DynamicResource Qualifying}" Foreground="White" />
                    <TextBlock x:Name="QualyText" Grid.Column="1" Foreground="White"/>
                </Grid>

                <!-- Sprint -->
                <Grid x:Name="RowSprint" Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{DynamicResource Sprint}" Foreground="White" />
                    <TextBlock x:Name="SprintText" Grid.Column="1" Foreground="White"/>
                </Grid>



                <Separator Margin="0,5,0,5"/>

                <!-- 车手积分榜标题 -->
                <TextBlock Text="{DynamicResource DriversStanding}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,0,0,3"/>

                <!-- 积分榜列表 -->
                <ListView x:Name="StandingList"
                          BorderThickness="0"
                          Background="Transparent"
                          Foreground="White"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          Height="200">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,1">
                                <TextBlock Text="{Binding DriverName}"
                                           Width="261"
                                           Foreground="White"/>
                                <TextBlock Text="{Binding Points}"
                                           Grid.Column="1"
                                           Foreground="#FFCCCCCC"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </StackPanel>
        </Border>
    </Grid>
</Window>
